<openerp>
    <data>

    <record id="view_company_form_inh" model="ir.ui.view">
            <field name="name">res.company.form.inh</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                    <xpath expr='//page[@string="Configuration"]' position='inside'>

                        <group>

                            <group string="Report Images">
                                    <field name="logo_taller" widget="image" />
                                    <field name="logo_motoscoot" widget="image" />
                                    <field name="pie_taller" widget="image" />
                                    <field name="pie_motoscoot" widget="image" />
                            </group>
                        </group>
                    </xpath>
            </field>
        </record>




</data>
</openerp>