<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_stock_filter_inventory_inh" model="ir.ui.view">
            <field name="name">Import Inventory Filter</field>
            <field name="model">stock.fill.inventory</field>
            <field name="inherit_id" ref="stock.view_stock_fill_inventory" />

            <field name="arch" type="xml">
              <field name="location_id" position="after"  groups="stock.group_locations">
                  <field name="product_brand" />
              </field>
            </field>

        </record>


        <record id="action_view_stock_fill_inventory_inh" model="ir.actions.act_window">
            <field name="name">Fill Inventory By Brand</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.fill.inventory</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="inherit_id" ref="stock.view_stock_fill_inventory"/>
            <field name="view_id" ref="view_stock_filter_inventory_inh"/>
            <field name="target">new</field>
            <field name="context">{'search_default_in_location':1}</field>
        </record>

    </data>
</openerp>
